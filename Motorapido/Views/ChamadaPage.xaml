<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Motorapido.Views.ChamadaPage" Title="Chamada" >
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Orientation="Vertical" Padding="10" Spacing="10">
            
            
               <Label Text="Logradouro Origem" />
               <Label x:Name="LogradouroOrigem" LineBreakMode="WordWrap" />
            
               <Label Text="Origem" />
               <Label x:Name="Origem" LineBreakMode="WordWrap" />
            
               <Label Text="Logradouro Destino" />
               <Label x:Name="LogradouroDestino" LineBreakMode="WordWrap" />
            
               <Label Text="Destino" />
               <Label x:Name="Destino" LineBreakMode="WordWrap" />
            
               <Label Text="Minutos" />
               <Label x:Name="Minutos" LineBreakMode="WordWrap" />
            
               <Label Text="Kms" />
               <Label x:Name="Kms" LineBreakMode="WordWrap" />
         

            <Label Text="Observação" />
         
            <Entry x:Name="Observação" Placeholder="" />
            
            <Button x:Name="Chamar" Margin="5,5,5,5" Text="Chamar" Clicked="Chamar_Clicked" />
        
        
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
